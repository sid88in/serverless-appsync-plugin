{
    "version":"2017-02-28",
    "operation":"GET",
    "path":"/user/twitter/_search",
    "params":{
        "body":{
            "from":0,
            "size":50,
            "query" : {
                "bool" : {
                    "must" : [
                        {"match" : { "tweet" : "$context.arguments.keyword" }}
                    ]
                }
            }
        }
    }
}