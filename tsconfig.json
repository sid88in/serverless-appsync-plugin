{
  "compilerOptions": {
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "skipLibCheck": true,
    "outDir": "lib",
    "noImplicitAny": false
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules",
    "src/**/*.d.ts",
    "src/graphql-playground.ts",
    "src/get-stack-value.ts"
  ]
}
